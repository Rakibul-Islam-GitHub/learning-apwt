					  <h1>Create new Job</h1>
					  
					</div>
				  </div>
				  <div class="row align-items-center">
					<div class="col mt-1">
						<form method="POST" enctype="multipart/form-data">
							<input type="text" class="form-control" required name="comname" placeholder="Company Name">
					</div>
				  </div>
				  <div class="row align-items-center">
					<div class="col mt-4">
						
							<input type="text" class="form-control" required name="title" placeholder="Job Title">
					</div>
				  </div>
				  <div class="row align-items-center mt-4">
					<div class="col">
					  <input type="text" class="form-control" required name="location" placeholder="Location">
					</div>
				  </div>
				  <div class="row align-items-center mt-4">
					<div class="col">
					  <input type="text" class="form-control" required name="salary" placeholder="Salary">
					</div>
					
				  </div>
				  <div class="row align-items-center mt-4">
					<div class="col">
					  
						<input type="file" class="form-control"  required name="pic" />
					</div>
					
				  </div>


				  <div class="row justify-content-start">
					<div class="col">
						<input class="btn btn-primary btn-block mt-4" type="submit" name="submit" value="Submit">

					</div>
					  
		
					 
					  
					
				  </div>

						</form>
					  


				</div>
			  </div>
			</div>
		  </section>




	
	
